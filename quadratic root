# include <stdio.h>
# include <math.h>

int main()
{
	double a,b,c,root_1,root_2;
	printf("\n Finding the roots of the quadratic equation");
	printf("\n enter coeffiencts a,b,c : ");
	scanf("%lf%lf%lf",&a,&b,&c);
	if(a!=0)
	{
		double root_1=  (-b + sqrt(pow(b,2) - (4*a*c))) / (2*a);
		double root_2=  (-b - sqrt(pow(b,2) - (4*a*c))) / (2*a);
		printf("\nroot_1 : %lf \nroot_2 : %lf \n",root_1,root_2);
	}
	else
	{
		printf("a should not zero");
	}
	return 0;
}
